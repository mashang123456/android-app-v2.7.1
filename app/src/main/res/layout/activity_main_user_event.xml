<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionbar_background"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_navigation_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="16dp"
            android:background="@drawable/ic_material"
            android:drawableLeft="@mipmap/btn_back_normal"
            android:drawablePadding="6dp"
            android:gravity="center|left"
            android:text="@string/user_event_hint"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="RtlHardcoded" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/ib_event_scan"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_material"
            android:contentDescription="@null"
            android:src="@mipmap/ic_discover_scan"
            android:tint="@color/white" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/lay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
